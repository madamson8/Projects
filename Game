package com.thefallenpaladin.fighting;

import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.MouseEvent;
import java.awt.event.MouseListener;

/**
 * Created by ma039102 on 11/30/2015.
 */
class Game extends JPanel implements MouseListener {
    
    final String windowOne_NAME = "Game."; // window stats
    final int windowOne_WIDTH = 600;
    final int windowOne_HEIGHT = windowOne_WIDTH / 10 * 8;

    int level = 0; // Gamestate stats.

    public Timer timer;
    public int timerSpeed;

    public static void main(String[] args) {
        Game game = new Game();
        
        JFrame windowOne = new JFrame(game.windowOne_NAME);
        windowOne.setSize(game.windowOne_WIDTH,game.windowOne_HEIGHT);
        windowOne.setDefaultCloseOperation(WindowConstants.EXIT_ON_CLOSE);
        windowOne.setVisible(true);
        windowOne.add(game);
        windowOne.addMouseListener(game);
        windowOne.setFocusable(true);
        windowOne.requestFocusInWindow();
        windowOne.setLocationRelativeTo(null);
        while(true) {
            game.gameTimer();
        }
    }

    public void paint(Graphics g) {

    }

    @Override
    public void mouseClicked(MouseEvent e) {
        
    }

    @Override
    public void mousePressed(MouseEvent e) {

    }

    @Override
    public void mouseReleased(MouseEvent e) {

    }

    @Override
    public void mouseEntered(MouseEvent e) {

    }

    @Override
    public void mouseExited(MouseEvent e) {

    }

    @SuppressWarnings("unchecked")
    public void gameTimer(){
        timer = new Timer(timerSpeed, new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {

            }
        });
        timer.start();
    }
}
