package com.thefallenpaladin.fighting;

import javax.swing.*;
import java.awt.*;
import java.awt.event.MouseEvent;
import java.awt.event.MouseListener;

/**
 * Created by ma039102 on 11/30/2015.
 */
class Game extends JPanel implements MouseListener {
    
    final String windowOne_NAME = "Game.";
    final int windowOne_WIDTH = 600;
    final int windowOne_HEIGHT = windowOne_WIDTH / 10 * 8;
    
    public static void main(String[] args) {
        Game game = new Game();
        
        JFrame windowOne = new JFrame(game.windowOne_NAME);
        windowOne.setSize(game.windowOne_WIDTH,game.windowOne_HEIGHT);
        windowOne.setDefaultCloseOperation(WindowConstants.EXIT_ON_CLOSE);
        windowOne.setVisible(true);
        windowOne.add(game);
        windowOne.addMouseListener(game);
        windowOne.setFocusable(true);
        windowOne.requestFocusInWindow();
        windowOne.setLocationRelativeTo(null);
    }
    
    public void paint(Graphics g) {
        
    }
    
    @Override
    public void mouseClicked(MouseEvent e) {
        
    }

    @Override
    public void mousePressed(MouseEvent e) {

    }

    @Override
    public void mouseReleased(MouseEvent e) {

    }

    @Override
    public void mouseEntered(MouseEvent e) {

    }

    @Override
    public void mouseExited(MouseEvent e) {

    }
}
